---
interface Props {
	title: string;
	description?: string;
	image?: string;
}

const { title, description = "A community of music producers and enthusiasts", image } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta property="og:image" content={image} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>